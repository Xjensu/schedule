<section class="d-flex justify-content-center align-items-center flex-column">
  <%= form_tag teachers_path, method: :get do %>
    <div class="input-group rounded">
      <%= text_field_tag :search, params[:search], placeholder: "Найти преподавателя", class: "form-control rounded" %>
    
      <%= button_tag type: "submit", class:"input-group-text border-0" do %>
        <i class="bi bi-search"></i>
      <% end %>
    </div>
  <% end %>
</section>

<div>
  <% @teachers.each do |teacher| %>
    <%= link_to teacher_schedules_path(id: teacher.id) do %>
      <p><%= teacher.post %> <%= teacher.full_name %></p>
    <% end %>
  <% end %> 
</div>              
