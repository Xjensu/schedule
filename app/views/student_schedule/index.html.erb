<div class="row">
  <% @schedules.each do |schedules| %>
    <div class="col-6">
      <div class="mb-2 text-center">
        <% if schedules[:week] == 0 %>
          Текущая неделя
        <% else %>
          Следующая неделя
        <% end %>
      </div>
      <% schedules[:dates].each_with_index do |dates_schedule, i| %>
        <div class="row">
          <div class="col-3">
            <%= @days[i] %>
          </div>
          <div class="col mb-3 row">
            <% all_schedule = dates_schedule[:schedule] %>
            <% @times.each do |time| %>
              <div class="col-2">
                <%= time %>
              </div>
              <div class="col-10">
                <% current = all_schedule.select { |schedule| schedule.start_time.strftime("%H:%M") == time } %>
                <div class="card mb-3">
                  <div class="card-body">
                    <% if current.present? %>
                      <h5 class="card-title"><%= current[0].lesson.lesson_type_name %> <%= current[0].subject.name %></h5>
                      <div class="row">
                        <div class="col-9">
                          <%= current[0].teacher.full_name %>
                        </div>
                        <div class="col-3">
                          <p><%= current[0].classroom.name %></p>
                        </div>
                      </div>
                    <% else %>
                      <h5 class="card-title"> </h5>
                      <div class="row">
                        <div class="col-9">
                           
                        </div>
                        <div class="col-3">
                          
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</di>
