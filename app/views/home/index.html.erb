<style>
  :root {
      --primary-color: #ffffff;
      --secondary-color: #121212;
      --accent-color: #333333;
      --text-color: #ffffff;
      --background-color: #000027;
  }

  * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
  }
  html, body {
      overflow-x: hidden;
  }
  body {
      font-family: 'Helvetica Neue', Arial, sans-serif;
      background-color: var(--background-color);
      color: var(--text-color);
      line-height: 1.6;
      padding-top: 4rem;
  }

  .container {
      max-width: 1200px;
      margin: 0 auto;
  }

  .header {
      text-align: center;
      margin-bottom: 60px;
  }

  .section-title {
      font-size: 14px;
      letter-spacing: 2px;
      margin-bottom: 20px;
      text-transform: uppercase;
      color: rgba(255, 255, 255, 0.7);
  }

  .header-text {
      font-size: 28px;
      font-weight: 300;
      max-width: 800px;
      margin: 0 auto;
      line-height: 1.4;
  }

  .header-text span {
      font-weight: 700;
  }
  .exhibition-item {
      width: 100%;
      padding: 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-top: 1px solid #fff;
      transition: background-color 0.3s ease;
  }
  .horizontal-line {
      width: 100%;
      height: 1px;
      background-color: #fff;
      margin: 1rem 0;
      }
  .number {
      font-size: 1.5rem;
      font-weight: bold;
      margin-right: 2rem;
      min-width: 40px;
      text-align: center;
  }

  .exhibition-info {
      flex-grow: 1;
  }

  .exhibition-title {
      font-size: 1.5rem;
      font-weight: bold;
      margin-bottom: 0.5rem;
      line-height: 1.2;
  }

  .exhibition-subtitle {
      font-size: 1rem;
      color: #ccc;
      margin-bottom: 1rem;
      line-height: 1.4;
  }

  .exhibition-details {
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-size: 0.875rem;
      color: #999;
      margin-top: 1rem;
  }

  .button {
      background-color: transparent;
      color: white;
      border: 1px solid white;
      border-radius: 10px;
      padding: 0.75rem 1.5rem;
      font-size: 1rem;
      cursor: pointer;
      transition: all 0.3s ease;
  }
  .button:hover {
      background-color: white;
      color: black;
  }

  .arrow {
      font-size: 2rem;
      color: #999;
      margin-left: 1rem;
  }

  /* Responsive design */
  @media (max-width: 768px) {
      .exhibition-item {
          padding: 1.5rem;
      }
      
      .number {
          font-size: 1.25rem;
          margin-right: 1.5rem;
      }
      
      .exhibition-title {
          font-size: 1.25rem;
      }
      
      .exhibition-subtitle {
          font-size: 0.875rem;
      }
      
      .exhibition-details {
          font-size: 0.75rem;
      }
      
      .button {
          padding: 0.5rem 1rem;
          font-size: 0.875rem;
      }
      
      .arrow {
          font-size: 1.5rem;
      }
  }
</style>
<div class="container relative max-w-4xl mx-auto z-10">
  <div class="header text-center mb-16">
    <div class="section-title text-sm uppercase tracking-[2px] text-white/70 mb-4">Выбор факультета</div>
  </div>

  <% if @faculties.present? %>
    <% @faculties.each_with_index do |faculty, index| %>
      <!-- Весь блок кликабелен, кроме кнопки -->
      <div 
        class="exhibition-item flex justify-between items-center border-b border-white py-6 px-4 cursor-pointer group"
        onclick="window.location='<%= faculty_path(faculty.id) %>'"
      >
        <div class="flex items-center gap-6 flex-grow">
          <div class="exhibition-info flex-grow">
            <h2 class="exhibition-title text-xl font-semibold group-hover:underline">
              <%= faculty.full_name %>
            </h2>
            <div class="exhibition-details mt-4">
              <a 
                href="<%= faculty.src %>" 
                class="button" 
                onclick="event.stopPropagation()"
              >
                Страница факультета
              </a>
            </div>
          </div>
        </div>
        <div class="arrow text-3xl text-gray-400 group-hover:text-white transition-all ml-4">→</div>
      </div>
    <% end %>
  <% else %>
    <p class="text-center text-white/70">Нет данных о факультетах</p>
  <% end %>
</div>

<%= render 'layouts/footer' %>