<%= turbo_stream.update 'flash' do %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    Ошибка при создании академического периода: <%= @academic_period.errors.full_messages.to_sentence %>.
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<%= turbo_stream.replace 'new_academic_period_form' do %>
  <%= turbo_frame_tag 'new_academic_period_form' do %>
    <%= render 'form', academic_period: @academic_period, faculty_id: params[:faculty_id] %>
  <% end %>
<% end %>