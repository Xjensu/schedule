<%= turbo_stream.update "schedule_teachers" do %>
  <div class="list-group">
    <% if @teachers.any? %>
      <% @teachers.each do |teacher| %>
          <div class="list-group-item d-flex justify-content-between align-items-center">
            <%= radio_button_tag "schedule[teacher_id]", teacher.id, @selected_teacher&.id == teacher.id,
              class: "form-check-input me-2", data: { action: "change->teacher-selection#selectTeacher", teacher_id: teacher.id, teacher_selection_target: "teacherOption" }%>
            <%= "#{teacher.surname} #{teacher.name} #{teacher.patronymic}" %>
          </div>
      <% end %>
    <% else %>
      <div class="list-group-item">Преподаватели не найдены</div>
    <% end %>
  </div>
<% end %>