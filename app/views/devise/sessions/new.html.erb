<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "week", "data-turbo-track": "reload" %>
<% end %>

<div class="login-box">
  <h2>Login</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="user-box">
      <%= f.text_field :email, required:"" %>
      <%= f.label "Почта" %>
    </div>

    <div class="user-box">
      <%= f.password_field :password, required:"" %>
      <%= f.label "Пароль" %>
    </div>

    <div class="button-frame">
      <%= f.submit "Войти", class: "btn btn-outline-light rounded-4" %>
    </div>
  <% end %>
</div>
