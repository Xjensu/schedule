<%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" %>
<%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" %>

<style>
  .schedule-container {
    max-width: 1200px;
    margin: 20px auto;
    padding: 20px;
  }
  
  .week-info {
    text-align: center;
    margin-bottom: 20px;
    font-weight: bold;
    color: #333;
    cursor: pointer;
    user-select: none;
    transition: color 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
  }
  
  .week-info:hover {
    color: #007bff;
  }
  
  .week-content {
    overflow: hidden;
    transition: max-height 0.3s ease, opacity 0.3s ease;
  }
  
  .day-header {
    text-align: center;
    font-weight: bold;
    margin-bottom: 15px;
    font-size: 1.2rem;
  }
  
  .time-column {
    display: flex;
    align-items: center;
    width: 80px;
    text-align: left;
    padding-right: 15px;
    font-weight: normal;
    color: #000;
    font-family: 'Helvetica', 'Arial', sans-serif;
  }
  
  .lesson-card {
    border: none;
    /* border-top: 2px solid #000; */
    padding: 12px 0;
    margin-bottom: 15px;
    background-color: transparent;
    box-shadow: none;
    transition: none;
    min-height: auto;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  
  .lesson-card:hover {
    /* Убрана стилизация при наведении */
  }
  
  .lesson-type {
    font-weight: normal;
    margin-bottom: 5px;
    font-family: 'Helvetica', 'Arial', sans-serif;
  }
  
  .lecture {
    color: #000000; /* Черный для лекций */
  }
  
  .pz {
    color: #002147; /* Темно-синий для практических занятий */
  }
  
  .lab {
    color: #dc3545; /* Красный для лабораторных */
  }
  
  .teacher {
    font-size: 0.9rem;
    color: #000;
    margin-bottom: 5px;
    font-family: 'Helvetica', 'Arial', sans-serif;
  }
  
  .room {
    font-size: 0.9rem;
    color: #000;
    font-family: 'Helvetica', 'Arial', sans-serif;
  }
  
  .empty-cell {
    border: none;
    /* border-top: 2px solid #000; */
    padding: 12px 0;
    margin-bottom: 15px;
    background-color: transparent;
    min-height: auto;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #000;
    font-style: normal;
    font-family: 'Helvetica', 'Arial', sans-serif;
  }
  
  .schedule-column {
    padding: 0 15px;
  }
  
  .day-section {
    margin-bottom: 30px;
    padding-bottom: 20px;
    border-bottom: none;
  }
  
  .day-section:last-child {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
  }

  .lesson-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 5px;
  }

  .dark-text {
    color: #000;
    font-weight: normal;
    font-size: 1rem;
    font-family: 'Helvetica', 'Arial', sans-serif;
  }
  
  .arrow-icon {
    transition: transform 0.3s ease;
    font-size: 1.2rem;
    color: #000;
  }
  
  .arrow-icon.collapsed {
    transform: rotate(-90deg);
  }
  
  @media (max-width: 768px) {
    .time-column {
        width: 60px;
        font-size: 0.9rem;
    }
    
    .lesson-card {
        padding: 10px 0;
    }
    
    .empty-cell {
        padding: 10px 0;
    }
    
    .schedule-column {
        padding: 0 10px;
    }
  }
</style>

<div class="container schedule-container">
  <div class="row">
    <% schedules.each do |schedule| %>
      <div class="col-md-6 schedule-column">
        <%= render partial: "week", locals: { week: schedule[:week], under: schedule[:under] } %>

        <div class="week-content">
          <% schedule[:dates].each_with_index do |dates_schedule, day_index| %>
            <div class="day-header"><%= @days[day_index] %></div>

            <% @times.each do |time_str| %>
              <div class="row mb-3 border border-left-0 border-bottom-0 border-right-0 border-dark">
                <div class="col-auto time-column"><%= time_str %></div>
                <div class="col">
                  <% lessons_at_time = dates_schedule[:schedule].select do |lesson|
                       lesson.start_time.strftime("%H:%M") == time_str
                     end %>

                  <% if lessons_at_time.any? %>
                    <% lessons_at_time.each do |lesson| %>
                      <div class="lesson-card">
                        <div class="lesson-header">
                          <div class="lesson-type <%= lesson.lesson.present? ? lesson.lesson.lesson_type.downcase : "lecture" %>">
                            <%= lesson.lesson.present? ? lesson.lesson.lesson_type_name.upcase : "" %> <%= lesson.subject.name %>
                          </div>
                          <div class="room dark-text"><%= lesson.classroom.present? ? lesson.classroom.name : "" %></div>
                        </div>
                        <div class="teacher"><%= lesson.teacher.present? ? lesson.teacher.full_name : "" %></div>
                      </div>
                    <% end %>
                  <% else %>
                    <div class="empty-cell">Нет занятий</div>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
  function toggleWeek(element) {
    const arrow = element.querySelector('.arrow-icon');
    const content = element.nextElementSibling;

    if (content.style.maxHeight === '0px' || content.style.maxHeight === '') {
      content.style.maxHeight = content.scrollHeight + 'px';
      content.style.opacity = '1';
      arrow.classList.remove('collapsed');
    } else {
      content.style.maxHeight = '0px';
      content.style.opacity = '0';
      arrow.classList.add('collapsed');
    }
  }

  document.addEventListener('DOMContentLoaded', function() {
    const weekContents = document.querySelectorAll('.week-content');
    weekContents.forEach(content => {
      content.style.maxHeight = content.scrollHeight + 'px';
      content.style.opacity = '1';
    });
  });
</script>

<%= javascript_include_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" %>