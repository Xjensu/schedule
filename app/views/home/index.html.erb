<style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }
        
        body {
            background-color: #ffff;
            color: #002147; 
            line-height: 1.6;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }
        
        .container {
            text-align: center;
            max-width: 800px;
            width: 100%;
        }
        
        .faculty-card {
            position: relative;
            background: white;
            border: 2px solid #002147;
            border-radius: 20px;
            padding: 40px 30px;
            margin-bottom: 40px;
            text-align: left;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        }
        
        .title {
            font-size: 48px;
            font-weight: 600;
            margin-bottom: 30px;
            text-align: center;
            width: 100%;
            display: block;
            overflow: hidden;
        }
        
        .title-mobile {
            font-size: 32px;
            font-weight: 600;
            margin-bottom: 30px;
            letter-spacing: -0.5px;
            text-align: center;
            width: 100%;
            display: block;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            display: none;
        }
        
        .faculty-logo {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 8px;
            border: 1px solid #002147;
            display: inline-block;
            vertical-align: middle;
        }
        
        .content-wrapper {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 30px;
        }
        
        .text-section {
            flex: 1;
            min-width: 0;
            display: flex;
            align-items: center;
        }
        
        .image-section {
            flex: 1;
            min-width: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
        }
        
        .buttons {
            display: flex;
            gap: 15px;
            justify-content: center;
            margin-top: 20px;
        }
        
        .btn {
            padding: 12px 24px;
            border-radius: 25px;
            font-size: 16px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }
        
        .btn-primary {
            background-color: transparent;
            color: #002147;
            border: 2px solid #002147;
            border-radius: 50px;
        }
        
        .btn-primary:hover {
            background-color: #002147;
            transform: translateY(-2px);
            border: solid #002147;
        }
        
        .btn-secondary {
            background-color: #002147;
            color: white;
            border: none;
        }
        
        .btn-secondary:hover {
            background-color: transparent;
            transform: translateY(-2px);
            color: #002147;
            border: 2px solid #002147;
        }

        .section-divider {
            height: 2px;
            background-color: #002147;
            width: 100%;
            margin: 40px 0;
        }
        
        @media (max-width: 768px) {
            .title {
                display: none;
            }
            
            .title-mobile {
                display: block;
            }
            
            .faculty-logo {
                width: 50px;
                height: 50px;
            }
            
            .content-wrapper {
                flex-direction: column;
                gap: 20px;
            }
            
            .text-section {
                justify-content: center;
            }
            
            .text-section,
            .image-section {
                width: 100%;
            }
            
            .buttons {
                flex-direction: row;
                justify-content: center;
                max-width: 100%;
            }
            
            .btn {
                flex: 1;
                min-width: 120px;
            }
            
            .faculty-card {
                padding: 30px 20px;
            }
        }
  </style>
<div class="container">
  <% if @faculties.present? %>
    <% @faculties.each do |faculty| %>
        <div class="faculty-card">
            <h1 class="title"><%= faculty.full_name %></h1>
            <h1 class="title-mobile"><%= faculty.short_name %></h1>
            <div class="buttons">
              <a href="<%= faculty_path(faculty.id) %>" class="btn btn-secondary">Расписание</a>
              <a href="<%= faculty.src %>" class="btn btn-primary">Страница факультета</a>
            </div>
        </div>
    <% end %>
  <% else %>
    нет ничего
  <% end %>
</div>

